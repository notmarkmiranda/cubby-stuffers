<div class="col-md-4 col-md-offset-4 well">
  <div class="form-group">
    <h4>Sign up to get stuffed today!</h4>
    <div class="sign-up-buttons">
      <%= button_to "Create Account", new_user_path, method: :get, class: "btn btn-primary" %>
      <%= button_to "Sign in with GitHub", github_login_path, method: :get, class: "btn btn-primary" %>
    </div>
    <hr>
    <h4>Or sign in with your existing account!</h4>
    <%= form_for(:session, url: login_path, method: :post) do |f| %>
    <h4>
      <%= f.label :email, "Email" %>
      <%= f.text_field :email, placeholder: "Enter Email", class: "form-control" %>
    </h4>
    <h4>
      <%= f.label :password, "Password" %>
      <%= f.password_field :password, placeholder: "Enter Password", class: "form-control" %>
    </h4>
    <%= f.submit "Sign in", class: "btn btn-primary" %>
  </div>
  <% end %>
</div>
